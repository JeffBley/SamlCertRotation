{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "baseName": {
      "value": "samlcert"
    },
    "location": {
      "value": "eastus"
    },
    "tenantId": {
      "value": "<insert your tenant id here>"
    },
    "notificationSenderEmail": {
      "value": "saml-rotation@domain.com"
    },
    "adminNotificationEmails": {
      "value": "mscott@domain.com;jhalpert@domain.com"
    },
    "customSecurityAttributeSet": {
      "value": "SamlCertRotation"
    },
    "customSecurityAttributeName": {
      "value": "AutoRotate"
    },
    "defaultCreateCertDays": {
      "value": 30
    },
    "defaultActivateCertDays": {
      "value": 14
    }
  }
}
